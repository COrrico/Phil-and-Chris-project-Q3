		<script>       
				
				var inventory = [];
				
					
						function Car(mileage,color) {
							this.mileage = mileage;  
							this.color = color;    
							  
							}
							
						 function Motocycle(mileage, color) {
							this.mileage = mileage;  
							this.color = color; 
							}   	
			
				
								
			 //Add cars to Array
			 
				function start()
				
					{    
					var type = prompt("Is this a motorcycle or a car")
					
					if( type == "car")   
						{
					
						var mileage1 = prompt("What is the mileage of the car?")       
						var color1 = prompt("What is the color of the car?")
						
						 car1 = new Car(mileage1,color1)	
						
						  inventory.push(car1)
						  console.log(inventory[0])
						}
						
					else if(type == "motorcycle")
						{
						  
							    
						var mileage2 = prompt("What is the mileage of the car?") 
						var color2 = prompt("What is the color of the car?")
						
						var motocycle1 = new Motocycle(mileage2,color2)	     
						
						 inventory.push(motocycle1)
						
						}
					}      	
					
					
			//search for cars.
			
			
			function search(){     
			
						 
			var trait = prompt("what color car do you want?")
			var traitFound = false;	  
									console.log(inventory.length)     

				for(var i = 0; inventory.length > i; i++) 
					{
					
						console.log(inventory[i].color)    
						
						if(inventory[i].color == trait)
							{
								console.log(inventory[i]);   
								var traitFound = true;
							}
						console.log(inventory[i].color)
					}
				
				if(traitFound != true)
					{
						alert("We did not find a car in our iventory with that trait.")     
					}
					
			};
		 
			car2 = new Car("19,000","red")	
			Motocycle2 = new Motocylce("5,000","black")	
			

									 inventory.push(car2)
									 inventory.push(Motocycle2)

